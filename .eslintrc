{
    "extends": "airbnb/legacy",
    "env": {
        "mocha": true
    },
    "rules": {
        "indent": [2, 4],
        "func-names": 0,
        "no-use-before-define": 0,
        "vars-on-top": 0,
        "consistent-return": 0,
        "no-shadow": 0,
        "no-param-reassign": 0,
        "new-cap": 0,
        "default-case": 0
    }
}
